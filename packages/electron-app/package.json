{
  "name": "electron-app",
  "version": "1.0.0",
  "description": "Electron app for gemini-cli",
  "main": "out/main/index.js",
  "scripts": {
    "dev": "npx electron-vite dev",
    "build": "npx electron-vite build",
    "start": "npx electron-vite preview",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "dependencies": {
    "@xterm/xterm": "^5.5.0",
    "electron": "^28.1.3",
    "node-pty": "^1.1.0-beta34",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "xterm-addon-fit": "^0.8.0",
    "lucide-react": "^0.309.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.3.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.11"
  },
  "build": {
    "productName": "Gemini CLI",
    "appId": "com.google.gemini-cli",
    "directories": {
      "output": "dist/electron"
    },
    "files": [
      "out/**/*",
      "package.json"
    ],
    "mac": {
      "icon": "src/resources/icon.png"
    },
    "win": {
      "icon": "src/resources/icon.png"
    },
    "linux": {
      "icon": "src/resources/icon.png"
    }
  }
}
